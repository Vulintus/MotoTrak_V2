<Window x:Class="MotoTrak.PortSelectionUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoTrak"
        mc:Ignorable="d"
        Title="Please select a MotoTrak controller" SizeToContent="Height" WindowStartupLocation="CenterOwner"  MinHeight="300" Height="Auto" Width="300">
    <Grid>
        <ListBox ItemsSource="{Binding Path=AvailablePorts}" SelectedIndex="{Binding Path=SelectedPortIndex}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="FontSize" Value="18" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="120" Height="40" Margin="5,0,0,5"
                Click="OK_Button_Click" />
    </Grid>
</Window>
